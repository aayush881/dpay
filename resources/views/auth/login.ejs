<section class="login flex items-center justify-center pt-10">
  <form action="/login"  method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-1/3 flex flex-col">
    <% if(messages.err) { %>
      <span class="text-red-500 text-sm pb-2"><%= messages.err %></span> 
  <% } %>
        <div class="mb-4">
          <label class="block text-grey-darker text-sm font-bold mb-2" for="username">
            Username
          </label>
          <input name="email" class="shadow appearance-none border rounded w-full outline-none py-2 px-3 text-grey-darker" id="username" type="text" placeholder="email">
        </div>
        <div class="mb-6">
          <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
            Password
          </label>
          <input name="password" class="shadow appearance-none border border-red outline-none rounded w-full py-2 px-3 text-grey-darker mb-3" id="password" type="password" placeholder="******************">
          
        </div>
        <div class="flex items-center justify-between">
          <button class="btn-primary text-white font-bold py-2 px-4 outline-none rounded" type="submit">
            Sign In
          </button>
          <a class="inline-block align-baseline font-bold text-sm text-blue hover:text-blue-darker" href="#">
            Forgot Password?
          </a>
        </div>
  </form>
    
    
</section>