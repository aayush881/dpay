<section class="pb-10 mb-10">
    <div class="text-center">
        <h1 class="text-lg font-bold underline text-blue-600">Complain till today</h1>
    </div>
    <div class="space-y-4 mx-4 ">
        <% for(var i=0; i < client.length; i++) { %>
        <div class="bg-gray-100 p-10 rounded-3xl">
            <div class="flex space-x-5 mt-3">
                <div class="font-bold text-blue-600">Complain Name: </div>
                <div><%= client[i].complain_name %></div>
            </div>
            <div class="flex space-x-5 mt-3">
                <div class="font-bold text-blue-600">Mobile Number: </div>
                <div><%= client[i].mobile_number %></div>
            </div>
            <div class="flex space-x-5 mt-3">
                <div class="font-bold text-blue-600">Complain Type: </div>
                <div><%= client[i].complain_type %></div>
            </div>
            <div class="flex space-x-5 mt-3">
                <div class="font-bold text-blue-600">Date of event: </div>
                <div><%= client[i].date_event %></div>
            </div>
            <div class="flex space-x-5 mt-3">
                <div class="font-bold text-blue-600">Description: </div>
                <div><%= client[i].desc %></div>
            </div>
            <div class="flex space-x-5 mt-3">
                <div class="font-bold text-blue-600">Complain filled on: </div>
                <div><%= client[i].createdAt %></div>
            </div>
        </div>
        <% } %>
        
    </div>
</section>