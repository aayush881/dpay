<section class="status">
    
    
    <% if(messages.err) { %>
        <span class="text-red-500 text-xl font-semibold"><%= messages.err %></span> 
    <% } %>
    <div class="final flex items-center justify-center h-full py-40">
        
        <div class="bg-indigo-800 text-white font-bold rounded-lg border shadow-lg p-8">
            <h1>Enter your transaction PIN</h1>
            <div class="relative h-10 input-component mb-5">
            <form action="/status" method="POST">

                <input
                  id="name"
                  type="password"
                  name="pin"
                  placeholder="MPIN"
                  class="h-full w-full border-gray-300 px-2 py-2 transition-all border-blue rounded-sm text-black outline-none" 
                  
                />
                <button id="check" type="submit" class="justify-items-center ml-60 mt-2 mr-5 bg-gray-200 hover:bg-blue-700 hover:text-white border border-gray-400 text-blue-700 font-bold py-2 px-6 rounded-lg">
                    Submit
                </button>
            </form>
            </div>
        </div>
     
    </div>
</section>