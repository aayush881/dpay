<section class="successful">
    <% if(messages.success) { %>
    <div id="success-alert" class="mx-2 rounded-full flex items-center bg-green-400 text-white text-sm font-bold px-4 py-3" role="alert">
        <p>Rs <%=amount %> <%=action%> account number <%=acc %></p>
    </div>
    <% } %>
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
       
        <div class="flex flex-col items-center w-full max-w-xs p-4 bg-white rounded-3xl md:flex-row">
            <div class="-mt-28 md:-my-16 md:-ml-32" style="clip-path: url(#roundedPolygon)">
                <svg class="svg rounded-full bg-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
            </div>
            <div class="flex flex-col space-y-4">
            <div class="flex flex-col items-center md:items-start">
                <h2 class="text-xl font-medium"><%=text %> Successfully</h2>
                <p class="text-base font-medium text-gray-400">Aayush Nevatia</p>
            </div>
            <div class="flex items-center justify-center space-x-3 md:justify-start">
                <span class="bg-gray-400 rounded-full p-1 px-2">Rs <%=amount %></span>
                
            </div>
            <a href="/transactions" class="underline text-blue-600">Transaction Details</a>
        </div>
    
       
    </div>
    
    
</section>