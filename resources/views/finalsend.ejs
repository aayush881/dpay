<section class="finalsend">
        <!-- component -->
    <div class="bg-gray-200 flex justify-center items-center">
        <!-- Start of component -->
        <div class="w-full bg-white border-2 border-gray-300 p-5 rounded-md tracking-wide shadow-lg">
        <div id="header" class="w-full flex"> 
            <img alt="mountain" class="w-45 rounded-md border-2 border-gray-300" src="https://picsum.photos/seed/picsum/200" />
            
            <div class="flex flex-col ml-5">
                <h2 id="name" class="text-2xl text-red-600 font-bold mb-2">Beneficiary Details</h2>
                <h4 class="py-2">Name: <%=info.name %></h4>
                <h4 class="py-2">Account Number: <%=info.account_number %></h4>
                <h4 class="py-2">Bank Name: <%=info.bank_name %></h4>
                <h4 class="py-2">Branch Name <%=info.branch_name %></h4>
                <h4 class="py-2">Mobile Number: <%=info.mobile_no %></h4>
                <h4 class="py-2">dpay ID: <%=info._id %></h4>
                <form action="/valid" method="POST">
                    <% if(messages.err) { %>
                        <span class="text-red-500 text-sm"><%= messages.err %></span> 
                    <% } %>
                    <div class="flex items-center">
                        <label class="leading-loose">Amount:     </label>
                        <input name="amount" type="number" class="mx-2 px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="enter the amount to send">
                    </div>
                    <input type="number" name="num" class="acc text-white" value="<%= user.account_number %>">
                    <button id="valid" class="my-4 btn-primary text-white font-bold py-2 px-4 rounded" type="submit">
                       Proceed
                    </button>
                </form>
                    
            </div>
        </div>
        </div>
        <!-- End of component -->
    </div>
</section>